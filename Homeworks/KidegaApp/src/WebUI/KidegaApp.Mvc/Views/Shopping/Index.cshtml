@model List<BasketItemDisplayResponse>

@{
    var columnCount = 0;
}

@if (!Model.Any())
{
    <div class="bg-primary p-3 m-4" >Sepetiniz boş!</div>
}

<div class="row m-4">
    @foreach (var productDisplay in Model)
    {
        @if (columnCount != 0 && columnCount % 3 == 0)
        {
            @:</div><div class="row m-4">
        }

        <div class="col-4">
            <partial name="_BasketProductsDisplay" model="productDisplay" />
        </div>
            
        columnCount++;
    }
</div>